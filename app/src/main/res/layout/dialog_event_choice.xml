<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_choice">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/pale_green"
        android:text="Выберите событие"
        android:textAlignment="center" />

    <Button
        android:id="@+id/measure_sugar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/green"
        android:text="Измерение глюкозы"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/get_insulin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/green"
        android:text="Инъекция инсулина"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/get_food"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="Прием пищи"
        />
</LinearLayout>